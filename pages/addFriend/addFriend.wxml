<!--pages/addFriend/addFriend.wxml-->
<view>
  <view class="search-wrap">
    <input class="search-friend" focus placeholder="根据微信号进行搜索" confirm-type="search" bindinput="inputPhoneNum"></input>
    <text class="iconfont iconsousuo2 search" bindtap="searchFriend"> </text>
  </view>
  <view class="friendsInfo">
  <view class="search-friend result">
    <image class="friend-avatar" bindtap="bindViewTap" src="{{avatar}}"></image>
    <text class="friend-nickname">{{nickName}}</text>
  </view>
    <text class="iconfont iconiconweiguanzhu add" bindtap="addFriend"></text>
  </view>
</view>